datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Customer {
    id        Int       @id @default(autoincrement())
    name      String
    email     String
    password  String
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    rides     Ride[]
    Session   Session[]
}

model Session {
    id         Int      @id @default(autoincrement())
    customerId Int
    customer   Customer @relation(fields: [customerId], references: [id])
    token      String
    createdAt  DateTime @default(now())
}

model Driver {
    id                Int      @id @default(autoincrement())
    name              String
    description       String
    vehicle           String
    pricePerKmInCents Int
    minKm             Int
    createdAt         DateTime @default(now())
    updatedAt         DateTime @updatedAt
    rides             Ride[]
}

model Review {
    id        Int      @id @default(autoincrement())
    rideId    Int
    ride      Ride     @relation(fields: [rideId], references: [id])
    rating    Int      @default(4)
    comment   String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Origin {
    id      Int    @id @default(autoincrement())
    address String
    rides   Ride[]
}

model Destination {
    id      Int    @id @default(autoincrement())
    address String
    rides   Ride[]
}

model Ride {
    id            Int         @id @default(autoincrement())
    customerId    Int
    customer      Customer    @relation(fields: [customerId], references: [id])
    driverId      Int
    driver        Driver      @relation(fields: [driverId], references: [id])
    originId      Int
    origin        Origin      @relation(fields: [originId], references: [id])
    destinationId Int
    destination   Destination @relation(fields: [destinationId], references: [id])
    distanceInKm  Int
    durationInSec Int
    valueInCents  Int
    createdAt     DateTime    @default(now())
    updatedAt     DateTime    @updatedAt
    review        Review[]
}

generator client {
    provider = "prisma-client-js"
}
